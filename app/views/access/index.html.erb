<div id="dynamic-gradient" class="container-fluid">
  <div class="row">
    <header class="col-xs-12">
        <h1>Sketch Phrase!</h1>
    </header>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <ul class="col-xs-offset-1 col-xs-11"><h3>How to play:</h3>
        <li>- first person writes a phrase</li>
        <li>- second person sketches that phrase</li>
        <li>- third person phrases that sketch</li>
        <li>- continue at infinitum</li>
        <li>- last person goesx</li>
        <li>- everybody looks at the whole process and giggle</li>
      </ul>
    </div>
  </div>
<% if current_user %>
    Welcome, <%= current_user.name %>!
  <div class="row">
    <div class="fixed-bottom col-xs-12">
      <div class="col-xs-12">
        <%= form_tag games_path, method: "post" do %>

<!--         <span id="playersCount">5</span>
                <span>Players</span> -->

        <button type="button" class="btn" id="morePlayers">
          <span class="glyphicon glyphicon-plus"></span>
        </button><br>
        <%= text_field_tag :players_count, 5, :readonly => true %>
        <%= label_tag :players_count, "Players" %>
        <br>
        <button type="button" class="btn" id="lessPlayers">
          <span class="glyphicon glyphicon-minus"></span>
        </button>
        <br>
        <br>
      </div>
      <div class="col-xs-12">
          <%= submit_tag "START!", class: "button" %>
        <% end %>
        <%= link_to "Sign Out", logout_path, class: "button" %>
      </div>
    </div>
  </div>
</div>
